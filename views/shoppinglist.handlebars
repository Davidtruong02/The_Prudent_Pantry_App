{{!-- Store the ingredients from shoppingRoutes.js in a card --}}
<h2 class="card-title">Shopping List</h2>
{{#each ingredients}}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <!-- Other card content... -->
            <button class="delete-ingredient" data-ingredient-id="{{this.id}}">X</button>
        </div>
    </div>
{{else}}
    <p>Nothing added to the list yet.</p>
{{/each}}


<script src="/JS/index.js" defer></script>