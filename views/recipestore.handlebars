

<div class="container">
    <!-- Display saved recipes here -->
    {{#if SavedRecipeStoreRecipes.length}}
        <h1>Saved Recipes</h1>
        <div id="SavedRecipeStoreRecipes">
            {{#each SavedRecipeStoreRecipes}}
                <div class="card">
                    <img src="{{this.image}}" alt="{{this.title}}">
                    <h2>{{this.title}}</h2>
                    <a href="{{this.url}}" target="_blank">View Recipe</a>
                    <p class="ingredients">Ingredients:</p>
                    <ol class="ingredientLines">
                        {{#each this.ingredientLines}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ol>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No saved recipes yet.</p>
    {{/if}}
</div>